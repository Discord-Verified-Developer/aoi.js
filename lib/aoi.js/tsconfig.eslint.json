{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": true
	},
	"include": [
		"*.ts",
		"*.js",
		"*.cjs",
		"*.mjs",
		"src/**/*.ts",
		"src/**/*.js",
		"src/**/*.cjs",
		"src/**/*.mjs",
		"__tests__"
	],
	"exclude": ["node_modules"]
}